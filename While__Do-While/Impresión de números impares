using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Impresión_de_números_impares
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //Imprime los números impares entre 1 y 100 usando un ciclo while.
            Console.WriteLine("Se imprimiran los numeros del 1 al 100 que sean impares");
            int numero = 1;

            while (numero <= 100)
            {
                   if (numero % 2 == 1)
                {
                    Console.WriteLine($"{numero}, ");
                }
                
                   numero++;

            }
            
            Console.ReadKey();
        }
    }
}
